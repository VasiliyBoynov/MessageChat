<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/1.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <TextArea editable="false" VBox.vgrow="ALWAYS" fx:id="listStrings">
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding></TextArea>
    <HBox spacing="5.0">
        <children>
            <TextField fx:id="message" onAction="#sendMessage" HBox.hgrow="ALWAYS" maxHeight="Infinity">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding></TextField>
            <Button onAction="#sendMessage" mnemonicParsing="false" text="Отправить" />
        </children>
        <opaqueInsets>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </opaqueInsets>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding></HBox>

</VBox>
